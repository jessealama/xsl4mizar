// universally generalize any formula appearing coming from an IVY
// derivation
tpl [Derivation] mode="ivy" {
  $formula = `*[1]`;
  <Derivation {
    for-each [@*] { copy-of `.`; }
    apply [$formula] mode="generalize";
    apply [Rule];
    apply [Derivation] mode="ivy";
  }
}